<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.softechfoundation.municipal.StateDetails"
    tools:showIn="@layout/activity_state_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/btn_natural_resources"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Natural Resources"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    <Button
                        android:id="@+id/sub_btn_mountains"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/btn_natural_resources"
                        android:layout_margin="2dp"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="Mountains" />

                    <Button
                        android:id="@+id/sub_btn_rivers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_natural_resources"
                        android:layout_margin="2dp"
                        android:layout_toEndOf="@+id/sub_btn_mountains"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="Rivers" />

                    <Button
                        android:id="@+id/sub_btn_lakes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/sub_btn_mountains"
                        android:layout_margin="2dp"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="Lakes" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/btn_main_attraction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Main Attraction"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    <Button
                        android:id="@+id/sub_btn_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/btn_main_attraction"
                        android:layout_margin="2dp"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="Foods" />

                    <Button
                        android:id="@+id/sub_btn_culture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_main_attraction"
                        android:layout_margin="2dp"
                        android:layout_toEndOf="@+id/sub_btn_food"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="Culture" />

                    <Button
                        android:id="@+id/sub_btn_tourist_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/sub_btn_food"
                        android:layout_margin="2dp"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:paddingStart="8dp"
                        android:text="Tourist Point" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/btn_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Urgent Services"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    <Button
                        android:id="@+id/sub_btn_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/btn_services"
                        android:layout_margin="2dp"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="Hospitals" />

                    <Button
                        android:id="@+id/sub_btn_atm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_services"
                        android:layout_margin="2dp"
                        android:layout_toEndOf="@+id/sub_btn_hospital"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="ATM" />

                    <Button
                        android:id="@+id/sub_btn_blood_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/sub_btn_hospital"
                        android:layout_margin="2dp"
                        android:background="#22646262"
                        android:padding="3dp"
                        android:text="Blook Bank" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</android.widget.ScrollView>
