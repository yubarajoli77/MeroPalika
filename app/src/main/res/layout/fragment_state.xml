<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_state_frame_layout"
    tools:context="com.softechfoundation.municipal.Fragments.StateFragment">

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/state_info_bg">

        <com.softechfoundation.municipal.CircularListViewDesign.CircularListView
            android:id="@+id/circular_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-300dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="222dp"
                android:src="@drawable/circle"
                android:id="@+id/imageView" />

        </com.softechfoundation.municipal.CircularListViewDesign.CircularListView>

    </android.widget.RelativeLayout>

    <com.eyalbira.loadingdots.LoadingDots
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dotted_state_detail_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:LoadingDots_auto_play="true"
        android:layout_marginRight="70dp"
        app:LoadingDots_dots_color="@color/colorPrimary"
        app:LoadingDots_dots_count="4"
        app:LoadingDots_dots_size="16dp"
        app:LoadingDots_dots_space="4dp"
        app:LoadingDots_jump_duration="200"
        app:LoadingDots_jump_height="16dp"
        app:LoadingDots_loop_duration="800"
        app:LoadingDots_loop_start_delay="100"
        android:visibility="gone"/>
</FrameLayout>
