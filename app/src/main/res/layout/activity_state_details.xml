<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f7fa"
    android:orientation="vertical"
    tools:context="com.softechfoundation.municipal.StateDetails">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/state_detail_top_bg"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/area_label"
                android:text="42145 Km2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/washBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/area_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:text="Area"
                android:textColor="@color/washBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/area_label"
                android:layout_marginStart="150dp"
                android:text="765565"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/washBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/population_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/area_label"
                android:layout_marginStart="135dp"
                android:text="Population"
                android:textColor="@color/washBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/density"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/density_label"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:text="45"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/washBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/density_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="Density"
                android:textColor="@color/washBlue"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignEnd="@+id/density"
                android:layout_centerVertical="true"
                android:src="@drawable/natural_resources" />
            <TextView
                android:id="@+id/detail_top_state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
               android:layout_marginTop="40dp"
                android:padding="2dp"
                android:text="State 1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/detail_top_capital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capital City"
               android:paddingStart="2dp"
                android:textColor="@color/white"
                android:layout_below="@+id/detail_top_state_name" />

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        layout="@layout/content_state_details" />

</android.widget.LinearLayout>
