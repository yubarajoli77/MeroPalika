<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/circular_card_item"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/circular_card_image_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/state3_logo"/>

            <TextView
                android:id="@+id/circular_description_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/circular_card_image_item"
                android:layout_gravity="center"
                android:text="State 1"
                android:layout_marginBottom="6dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>