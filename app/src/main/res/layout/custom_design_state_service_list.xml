<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/service_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">
                <TextView
                    android:id="@+id/service_list_list_name"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Kantipur City Hospital"
                    android:textColor="@color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:padding="4dp"/>
                <TextView
                    android:id="@+id/service_list_list_address"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/service_list_list_name"
                    android:text="Kathmandu,Purano Baneshwor"
                    android:padding="4dp"/>
                <TextView
                    android:id="@+id/service_list_list_info"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/service_list_list_address"
                    android:text="Upcomming"
                    android:textColor="@color/black"
                    android:padding="4dp"/>
                <ImageButton
                    android:id="@+id/service_list_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location_24dp"
                    android:background="@color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

                <ImageButton
                    android:id="@+id/service_list_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="19dp"
                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@+id/service_list_location"
                    android:layout_toStartOf="@+id/service_list_location"
                    android:background="@color/transparent"
                    android:src="@drawable/phone_24dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

</android.widget.LinearLayout>