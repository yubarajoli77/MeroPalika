<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.About">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Mero Palika"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:padding="4dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_app_intro"
                android:padding="8dp"
                android:textSize="16sp"
                android:text="@string/mero_palika_about"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed By:"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Softech Foundation Pvt. Ltd."
                android:textColor="@color/black"
                android:padding="4dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/about_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="16dp"
                android:autoLink="map"
                android:text="Sahabhagita Marga, Mid-Baneshowr, Kathmandu Nepal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/about_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_perm_phone_msg_black_24dp" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text=","/>

                <TextView
                    android:id="@+id/about_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16dp"
                    android:autoLink="phone"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text=","/>
                <TextView
                    android:id="@+id/about_phone3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/about_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_contact_mail_black_24dp"
                android:autoLink="email"
                android:text="info@softechfoundation.com"/>
            <TextView
                android:id="@+id/about_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_public_black_24dp"
                android:autoLink="web"
                android:text="http://www.softechfoundation.com/"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/about_softech_logo"
                android:src="@drawable/softech_logo"/>


        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>